{
  "name": "hmpps-sentence-plan-ui",
  "version": "0.0.1",
  "description": "HMPPS Sentence Plan Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-sentence-plan-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild, Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "test": "TZ=UTC jest",
    "test:ci": "TZ=UTC jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.731.1",
    "@ministryofjustice/frontend": "^3.3.1",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1-beta.2",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^3.4.0",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "csurf": "^1.11.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.8.0",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "luxon": "^3.5.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.1.1",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-session": "^2.0.49",
    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.7",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "axe-core": "^4.10.2",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cookie-session": "^2.1.0",
    "cypress": "^13.17.0",
    "cypress-axe": "^1.5.0",
    "cypress-multi-reporters": "^2.0.4",
    "cypress-split": "^1.24.8",
    "esbuild": "^0.25.0",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.0.1",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.4.1",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prettier-plugin-jinja-template": "^2.0.0",
    "sass": "^1.83.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "csurf": {
      "cookie": "0.7.2"
    }
  }
}

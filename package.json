{
  "name": "hmpps-sentence-plan-ui",
  "version": "0.0.1",
  "description": "HMPPS Sentence Plan Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-sentence-plan-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "test": "TZ=UTC jest",
    "test:ci": "TZ=UTC jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets",
    "rebuild": "npm run clean && npm i && npm run build",
    "setup": "npm ci && hmpps-npm-script-run-allowlist && cypress install"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^5.2.1",
    "@ministryofjustice/hmpps-audit-client": "^1.1.1",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.3",
    "@ministryofjustice/hmpps-monitoring": "^0.0.2",
    "@types/pg": "^8.16.0",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^3.13.0",
    "body-parser": "^2.2.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "express": "^4.22.1",
    "express-session": "^1.19.0",
    "govuk-frontend": "^5.14.0",
    "helmet": "^8.1.0",
    "hmrc-frontend": "^6.111.0",
    "http-errors": "^2.0.1",
    "jwt-decode": "^4.0.0",
    "luxon": "^3.7.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.17.2",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.3.0",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.5",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@tsconfig/node22": "^22.0.5",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-session": "^2.0.49",
    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.19.7",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "audit-ci": "^7.1.0",
    "axe-core": "^4.11.1",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "cookie-session": "^2.1.1",
    "cypress": "^14.5.4",
    "cypress-axe": "^1.7.0",
    "cypress-image-diff-html-report": "^2.2.0",
    "cypress-image-diff-js": "^2.5.0",
    "cypress-multi-reporters": "^2.0.5",
    "cypress-split": "^1.24.25",
    "esbuild": "^0.27.2",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.6.0",
    "glob": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "^15.5.2",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "^1.97.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}

{
  "name": "hmpps-sentence-plan-ui",
  "version": "0.0.1",
  "description": "Hmpps Sentence Plan Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-sentence-plan-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "test": "TZ=UTC jest",
    "test:ci": "TZ=UTC jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.621.0",
    "@ministryofjustice/frontend": "^2.1.2",
    "accessible-autocomplete": "^3.0.0",
    "agentkeepalive": "^4.5.0",
    "applicationinsights": "^3.4.0",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "csurf": "^1.11.0",
    "express": "^4.21.0",
    "express-prom-bundle": "^7.0.0",
    "express-session": "^1.18.0",
    "govuk-frontend": "^5.6.0",
    "helmet": "^7.1.0",
    "hmpps-court-cases-release-dates-design": "^2.6.2",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "prom-client": "^15.1.1",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.2",
    "superagent": "^8.1.2",
    "url-value-parser": "^2.2.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.0",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-session": "^2.0.48",
    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.16",
    "@types/passport-oauth2": "^1.4.15",
    "@types/superagent": "^8.1.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.0.0",
    "axe-core": "^4.9.1",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cookie-session": "^2.1.0",
    "cypress": "^13.13.2",
    "cypress-axe": "^1.5.0",
    "cypress-multi-reporters": "^1.6.4",
    "esbuild": "^0.21.5",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^11.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.2",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-jinja-template": "^1.3.3",
    "sass": "^1.75.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.2"
  }
}

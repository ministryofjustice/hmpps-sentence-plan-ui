{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% if data.popData %}
    <header class="plan-header" role="presentation">
        <div class="plan-header__subject-details">
            <p class="plan-header__subject-details__title">{{ locale.common.planHeader.mini.title }}</p>
            <dl class="plan-header__subject-details__identifiers">
                <div>
                    <dt>{{ locale.common.planHeader.mini.crnLabel }}</dt>
                    <dd>{{ data.popData.crn }} </dd>
                </div>
                <div>
                    <dt>{{ locale.common.planHeader.mini.pncLabel }}</dt>
                    <dd>{{ data.popData.pnc }} </dd>
                </div>
                <div>
                    <dt>{{ locale.common.planHeader.mini.dateOfBirthLabel }}</dt>
                    <dd>{{ data.popData.dateOfBirth | formatSimpleDate }} </dd>
                </div>
            </dl>
        </div>

        {{ govukNotificationBanner({
          text: header.announcementMessage
        }) if header.announcementMessage }}

        {% block extension %}
            {# Block for extended versions #}
        {% endblock %}
    </header>
{% endif %}

{% extends "./plan-header-mini.njk" %}
{% from "moj/components/page-header-actions/macro.njk" import mojPageHeaderActions %}

{% block extension %}
    {% set buttonItems = [] %}
    {% for item in header.items %}
        {% if item !== "" %}
            {% set buttonItems = buttonItems.concat(item) %}
        {% endif %}
    {% endfor %}

<form method="post">
  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
  <input type="hidden" name="areaOfNeed" value="accommodation">
    {{ mojPageHeaderActions({
      heading: {
        text: header.heading,
        classes: "govuk-heading-l govuk-!-margin-bottom-0"
      },
      items: buttonItems
    }) }}
  </form>
{% endblock %}

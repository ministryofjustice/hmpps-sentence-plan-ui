{% extends "../partials/layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../components/error-summary/error-summary.njk" import errorSummary %}

{% set pageTitle %}
    {% if errors %}
        Error: {{ applicationName }} - Agree plan
    {% else %}
        {{ applicationName }} - Agree plan
    {% endif %}
{% endset -%}

{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <a href="#" class="govuk-back-link">Back</a>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ errorSummary({
                errors: errors,
                locale: locale
            }) }}

            <h1 class="govuk-heading-l">{{ locale.title | replace("{POP_NAME}", data.popData.givenName) }}</h1>
            <p class="govuk-secondary-text">{{ locale.subtitle | replace("{POP_NAME}", data.popData.givenName) }}</p>

            <form id="agree-plan-form" method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <input type="hidden" name="planUuid" value="{{ data.planUuid }}">

                {% set doesNotAgreeDetailsHtml %}
                    {{ govukTextarea({
                        name: "does-not-agree-details",
                        id: "does-not-agree-details",
                        rows: 3,
                        label: {
                            text: locale.agreePlanOptions.enterDetails
                        },
                        errorMessage: getFormattedError(errors, locale, 'does-not-agree-details')
                    }) }}
                {% endset -%}

                {% set couldNotAnswerDetailsHtml %}
                    {{ govukTextarea({
                        name: "could-not-answer-details",
                        id: "could-not-answer-details",
                        rows: 3,
                        label: {
                            text: locale.agreePlanOptions.enterDetails
                        },
                        errorMessage: getFormattedError(errors, locale, 'could-not-answer-details')
                    }) }}
                {% endset -%}

                {{ govukRadios({
                    name: "agree-plan-radio",
                    id: "agree-plan-radio",
                    errorMessage: getFormattedError(errors, locale, 'agree-plan-radio'),
                    items: [
                        {
                            value: "yes",
                            text: locale.agreePlanOptions.yes | replace("{POP_NAME}", data.popData.givenName),
                            checked: data.form['agree-plan-radio'] == 'yes'
                        },
                        {
                            value: "no",
                            text: locale.agreePlanOptions.no | replace("{POP_NAME}", data.popData.givenName),
                            checked: data.form['agree-plan-radio'] == 'no',
                            conditional: {
                                html: doesNotAgreeDetailsHtml
                            }
                        },
                        {
                            value: "couldNotAnswer",
                            text: locale.agreePlanOptions.couldNotAnswer | replace("{POP_NAME}", data.popData.givenName),
                            checked: data.form['agree-plan-radio'] == 'couldNotAnswer',
                            conditional: {
                                html: couldNotAnswerDetailsHtml
                            }
                        }
                    ]
                }) }}

                {{ govukTextarea({
                    name: "notes",
                    id: "notes",
                    label: {
                        text: locale.notes,
                        classes: "govuk-label--m"
                    }
                }) }}

                {{ govukButton({
                    text: locale.agreePlanButton | replace("{POP_NAME}", data.popData.givenName),
                    name: "action",
                    value: "agreePlan"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
{% extends "../partials/layout.njk" %}
{% from "../partials/goal-summary-card.njk" import goalSummaryCard %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Remove Goal" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <a href="#" class="govuk-back-link">Back</a>
        <h1 class="govuk-heading-xl">Are you sure you want to remove this goal?</h1>

        {{ summaryListWithSteps(data.goal, showActions=false) }}

        <form id="remove-goal-form" method="POST">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <input type="hidden" name="goalUuid" value="{{ data.goal.uuid }}">
            <div class="govuk-button-group">
                {{ govukButton({
                    text: locale.removeGoalButtonText,
                    name: "action",
                    value: "remove"
                }) }}
                {{ govukButton({
                    text: locale.cancelButtonText,
                    name: "action",
                    classes: "govuk-button--secondary",
                    value: "cancelRemove"
                }) }}
            </div>
        </form>
    </div>
</div>

{% endblock %}
